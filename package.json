{
  "name": "floxy",
  "version": "0.1.0",
  "description": "A lightweight, opinionated composable Flow/Node editor built on Bootstrap 5.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "dev": "npm run clean && npm run build && npx serve . -l 8001",
    "lint": "eslint .",
    "format": "prettier --write .",
    "clean": "rimraf dist",
    "build": "rollup -c"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dduraipandian/floxy.git"
  },
  "bugs": {
    "url": "https://github.com/dduraipandian/floxy/issues"
  },
  "homepage": "https://github.com/dduraipandian/floxy#readme",
  "keywords": [
    "drag and drop",
    "graph",
    "workflow",
    "flowchart",
    "components",
    "es-modules"
  ],
  "author": "dduraipandian",
  "license": "MIT",
  "engines": {
    "node": ">=18.16.0"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "browser": "./dist/floxy.min.js"
    },
    "./style": "./dist/floxy.min.css"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "babel-jest": "^30.2.0",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "rollup": "^2.79.2",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2"
  },
  "dependencies": {
    "@uiframe/core": "^0.1.0",
    "@uiframe/notification": "^0.1.1"
  }
}
